{% extends "base.html.twig" %}

{% block content %}
    <form class="form-signin" method="POST">
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Create new profile</h1>
            <p>To access <code>create / edit / delete</code> functionality you need to create new profile.</p>
        </div>

        {% if errors %}
            <div class="errors">
                {% for error in errors %}
                    <p class="alert alert-danger">{{ error }}</p>
                {% endfor %}
            </div>
        {% endif %}

        <div class="form-label-group">
            <input type="email" name="email" class="form-control" placeholder="Email" required autofocus>
            <label for="inputEmail">Email address</label>
        </div>

        <div class="form-label-group">
            <input type="password" name="password" class="form-control" placeholder="Password" required>
            <label for="inputPassword">Password</label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        <p class="mt-5 mb-3 text-muted text-center">Lyubomir Hadzhiev &copy; 2020</p>
    </form>
{% endblock %}